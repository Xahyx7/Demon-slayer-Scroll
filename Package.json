{
  "name": "demon-slayer-encyclopedia",
  "version": "1.0.0",
  "description": "The ultimate interactive Demon Slayer encyclopedia with breathing effects and character database",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8000",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/styles.min.css assets/css/*.css",
    "minify-js": "uglifyjs assets/js/*.js -o dist/scripts.min.js",
    "test": "jest",
    "lint": "eslint assets/js/*.js",
    "deploy": "gh-pages -d ."
  },
  "keywords": [
    "demon-slayer",
    "kimetsu-no-yaiba",
    "anime",
    "manga",
    "encyclopedia",
    "interactive",
    "breathing-techniques",
    "hashira"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "clean-css-cli": "^5.6.1",
    "uglify-js": "^3.17.4",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "gh-pages": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/demon-slayer-encyclopedia.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/demon-slayer-encyclopedia/issues"
  },
  "homepage": "https://yourusername.github.io/demon-slayer-encyclopedia"
}
